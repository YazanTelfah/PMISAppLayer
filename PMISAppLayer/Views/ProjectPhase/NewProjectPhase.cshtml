
@using PMISAppLayer.DTO @*//NameofProject.NameOfFolder*@
@using PMISBLayer.Entities

@model CreateorUpdatePhaseDTO


<script>
  $( function() {
      $("#StartDate").datepicker({
          altFormat: "yy-mm-dd"
      });
      $("#EndDate").datepicker({
          altFormat: "yy-mm-dd"
      });
  } );
</script>

<form asp-controller="Phase" asp-action="CreateorUpdatePhase" method="post" enctype="multipart/form-data">
    @Html.HiddenFor(x => x.PhaseId)
    <div class="form-group">
        <label>Enter your ohase Name</label>

        <input class="form-control" asp-for="PhaseName" />
    </div>
    <div class="form-group">
        <label> Start Date</label>

        @*<input type="datetime" class="form-control" asp-for="" />*@
    </div>
    <div class="form-group">
        <label> End Date</label>

        @*<input type="datetime" class="form-control" asp-for="EndtDate" />*@
    </div>
    <div class="form-group">
        <label>select Phase</label>
        <select name="PhaseId" class="form-control" multiple>
            @{
                foreach (var pt in (List<ProjectPhase>)ViewBag.Phase)
                {
                    <option value="@pt.PhaseId">@pt.Phase.PhaseName</option>
                }
            }
        </select>
    </div>
</form>










