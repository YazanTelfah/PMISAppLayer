@model PMISBLayer.Entities.Phase

@{
    ViewData["Title"] = "Edit";
}

<h1 style="color:cornflowerblue" >Edit Phase </h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PhaseId" />
            <div class="form-group">
                <label asp-for="PhaseName" class="control-label"></label>
                <input asp-for="PhaseName" class="form-control" />
                <span asp-validation-for="PhaseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-dark" >Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
