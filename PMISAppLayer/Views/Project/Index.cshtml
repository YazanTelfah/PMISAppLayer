@using PMISBLayer.Entities

<a class="btn btn-outline-primary btn-lg btn-block" href="/Project/Create">Create a New Project </a>
<a class="btn btn-outline-info btn-lg btn-block " href="/Phase/Index"> Phases </a>
<a class="btn btn-outline-secondary btn-lg btn-block " href="/Deliverable/Index"> Deliverables </a>
<a class="btn btn-outline-dark btn-lg btn-block " href="/Home/Index"> Messages </a>
<br />
<table class="table table-dark table-hover"  id="myTable">
    <thead>
        <tr>
            <th>
                Project Id
            </th>
            <th>
                Project Name
            </th>
            <th>
                Project Type
            </th>
            <th>
                Project Status
            </th>
            <th>
                Project Start Date
            </th>
            <th>
                Project End Date
            </th>
            <th>
                Project Contract
            </th>
            <th>
                Project Amount
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in (List<Project>)ViewBag.project)
        {
        <tr>
            <td>@p.ProjectId</td>
            <td>@p.ProjectName</td>
            <td>@p.ProjectType.ProjectTypeName</td>
            <td>@p.ProjectStatus.ProjectStatusName</td>
            <td>@p.StratDate.ToString("d")</td>
            <td>@p.EndDate.ToString("d")</td>
            <td> <a class="btn btn-outline-info " target="_blank" href="/Project/ViewContract?ProjectId=@p.ProjectId">@p.ContractFileName</a></td>
            <td>@p.ContractAmount</td>
            <td><a class="btn btn-outline-warning" href="/Project/Update?id=@p.ProjectId">Edit</a></td>
            <td><a class="btn btn-outline-danger" href="/Project/DeleteProject?Projectid=@p.ProjectId">Delete</a></td>
            <td><a class="btn btn-outline-light text-lg-center" href="/ProjectPhase/Index?id=@p.ProjectId">Phase</a></td>

        </tr>
        }

            </tbody>
</table>
@section scripts {
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/jq-3.6.0/dt-1.12.1/b-2.2.3/fc-4.1.0/sc-2.0.6/sb-1.3.3/sp-2.0.1/sl-1.4.0/datatables.min.css" />
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/jq-3.6.0/dt-1.12.1/b-2.2.3/fc-4.1.0/sc-2.0.6/sb-1.3.3/sp-2.0.1/sl-1.4.0/datatables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        })
    </script>
}