<h4>Create new Project</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CraeteProject" enctype="multipart/form-data">

            <div class="form-group">
                <label>Enter Name of Project</label>

                <input class="form-control" asp-for="ProjectName" />
            </div>
            <div class="form-group">
                <label>select  Type of your Project</label>
                <select name="ProjectTypeId" class="form-control">
                    @{
                        foreach (var pt in (List<ProjectType>)ViewBag.ProjectType)
                        {
                            <option value="@pt.ProjectTypeId">@pt.ProjectTypeName</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label> Start Date</label>

                <input type="datetime" class="form-control" asp-for="StartDate" />
            </div>
            <div class="form-group">
                <label> End Date</label>

                <input type="datetime" class="form-control" asp-for="EndDate" />
            </div>
            <div class="form-group">
                <label>select  status of your Project</label>
                <select name="ProjectStatusId" class="form-control">
                    @{
                        foreach (var st in (List<ProjectStatus>)ViewBag.Projectstatus)
                        {
                            <option value="@st.ProjectStatusId">@st.ProjectStatusName</option>
                        }
                    }
                </select>
            </div>

            <div class="form-group">
                <label> Enter  Contract Amount</label>

                <input class="form-control" asp-for="ContractAmount" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.PhasesIds" class="control-label">Select Your Phase</label>
                <select asp-for="@Model.PhasesIds" class="form-control">
                    @foreach (var item3 in (List<Phase>)ViewBag.Phase)
                    {
                        <option value="@item3.PhaseId">@item3.PhaseName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label> Uploud Contract</label>

                <input type="file" class="form-control" name="ContractFile" />
            </div>
            <br />
            <input type="submit" value="Create " class="btn btn-outline-primary" />
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
